APP_NAME="Quiz App"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://quiz-app.to-kome.com

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja
APP_FAKER_LOCALE=ja_JP

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=quiz_app
DB_USERNAME=quiz_user
DB_PASSWORD=<強力なパスワードに変更>
DB_ROOT_PASSWORD=<強力なルートパスワードに変更>

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=quiz-app.to-kome.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=<Redisパスワードに変更>
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=<SMTPサーバー>
MAIL_PORT=587
MAIL_USERNAME=<メールユーザー名>
MAIL_PASSWORD=<メールパスワード>
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@quiz-app.to-kome.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

REVERB_APP_ID=824203
REVERB_APP_KEY=<本番用キーに変更>
REVERB_APP_SECRET=<本番用シークレットに変更>
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY=<REVERB_APP_KEYと同じ値>
VITE_REVERB_HOST=quiz-app.to-kome.com
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https
